<h2>スケジュール編集</h2>

<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% end %>
<%= render "shared/error", obj: @task %>

<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title ,class:"form" %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date ,"開始日" %></th>
            <td><%= f.date_field :start_date ,class:"form" %></td>
        </tr>
        <tr>
            <th><%= f.label :complete_date ,"終了日" %></th>
            <td><%= f.date_field :complete_date ,class:"form" %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td><%= f.check_box :all_day %>
            <br>
            終日の場合はチェックを入れます
            </td>
            
        </tr>
        <tr>
            <th><%= f.label :content ,"スケジュールメモ" %></th>
            <td><%= f.text_field :content ,class:"schedule-form"%></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュール編集を完了する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>

<footer>
    <h2>現在の日時：<%= @date %></h2>
</footer>