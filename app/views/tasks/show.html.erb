<h2>スケジュール詳細</h2>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @task.start_date.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @task.created_at.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td>
          <% if @task.all_day %>
          ○
          <% end %>
        </td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.content %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール情報一覧に戻る", :tasks %></li>
        <li><%= link_to "スケジュールを編集する", edit_task_path %></li>
        <li><%= link_to "スケジュールを削除", @task, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
    </ul>
</div>

<footer>
    <h2>現在の日時：<%= @date %></h2>
</footer>
